<!DOCTYPE html>
<html lang="en">

  <%- include('admin/includes/header') %>
<body>
  <div class="min-height-250 bg-primary position-absolute w-100"></div>
 <%- include('admin/includes/sidebar')%>
  <main class="main-content position-relative border-radius-lg ">
    <!-- Navbar -->
   <%- include('admin/includes/navbar')%>
    <!-- End Navbar -->
    <div class="container-fluid py-4">
      <div class="row">
        <div class="col-12">
          <div class="card mb-4">
            <div class="row">

           <div  class="col-10">
            <div class="card-header pb-0">
                <h6>Category table 
                  </h6>
               
              </div>
           </div>
           <div class="col-2">
            <div class="card-header pb-0">
           <h6>
            
                <!-- <a href="/add_category" class="btn btn-sm btn-dark float-right mb-0 d-block d-lg-none">
                    <button  type="submit" class="btn btn-sm btn-dark float-right mb-0 d-none d-lg-block">Add Category</button>
                </a> -->
           </h6>
           </div>
            </div>
        </div>
            <div class="card-body px-0 pt-0 pb-2">
              <div class="table-responsive p-0">
                <table class="table align-items-center mb-0">
                  <thead>
                    <tr>
                      <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Catgory Name</th>
                      <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Subcategory List</th>
                     
                      <th class="text-secondary opacity-7"></th>
                    </tr>
                  </thead>
                  <tbody>
                  

                    <% if(data.length){
                        for(var i = 0; i< data.length; i++) {%>  
                        
                            <tr>
                              
                                <td>
                                    <div class="d-flex px-2 py-1">
                                    
                                      <div class="d-flex flex-column justify-content-center">
                                        <div>
                                          <img src="../assets/images/category/<%= data[i].image %>" class="avatar avatar-sm me-3" alt="user1">
                                        </div>
                                        <h6 class="mb-0 text-sm"></h6>
                                        &nbsp;&nbsp;<%= data[i].category_name %>
                                      </div>
                                      <div>
                                        &nbsp;&nbsp;
                                        &nbsp;&nbsp;
                                        <a href="/add_subcategory/<%= data[i]._id %>" class="text-xs text-danger text-danger" data-toggle="tooltip" data-original-title="Edit user">
                                          + SUBCATEGORY
                                            </a>
                                      </div>
                                    </div>
                                  </td>  
                                
                          
                                   
    
                                 
                                  <td>
                                    
                                    <ul>
                              

                                  <% 
                                    for(var j = 0; j< sub_data.length; j++) {%>  
                                     
                                        <% var count =0 %>    
                                      
                                         
                                  <% if(data[i]._id.equals(sub_data[j].category_id)){ %>  
                             
                                            <li> <%= sub_data[j].sub_category_name %>
                                               
                                            </li>  
                                            
                                      <% count = count +1 %>
                                      <% }%>
                                  
                                      <% } %>
                                    </ul></td>
                                
                                
                                
                                <td>
                                    <ul>
                                        <% 
                                        for(var j = 0; j< sub_data.length; j++) {%>  
                                            <%= console.log(sub_data[j].category_id)%>
                                            <%= console.log(data[i]._id)%>
                                            <% var count =0 %>    
                                          
                                             
                                      <% if(data[i]._id.equals(sub_data[j].category_id)){ %>  
                                 
                                        <dt>
                                            <a href="/update_subcat/<%= sub_data[j]._id %>" class="text-secondary font-weight-bold text-xs text-info" data-toggle="tooltip" data-original-title="Edit user">
                                                Update
                                              </a>
                                              &nbsp;&nbsp;
                                              &nbsp;&nbsp;
                                              <a href="/delete_subcat/<%= sub_data[j]._id %>" class="text-secondary font-weight-bold text-xs text-danger" data-toggle="tooltip" data-original-title="Edit user">
                                                Delete
                                              </a>
                                            
                                            </dt>  
                                        
                                          <% count = count +1 %>
                                          <% }%>
                                      
                                          <% } %>


                                    </ul>
                                </td>
                                  
                             
                                

                              </tr>
                            <% }
                                
                        }else{ %>
                            <tr>
                               <td colspan="3">No user</td>
                            </tr>
                         <% } %> 

                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
     
      <%- include('admin/includes/footer')%>
    </div>
  </main>
  <div class="fixed-plugin">
    <a class="fixed-plugin-button text-dark position-fixed px-3 py-2">
      <i class="fa fa-cog py-2"> </i>
    </a>
  </div>


    <!--   Core JS Files   -->
    <script src="../assets/js/core/popper.min.js"></script>
  <script src="../assets/js/core/bootstrap.min.js"></script>
  <script src="../assets/js/plugins/perfect-scrollbar.min.js"></script>
  <script src="../assets/js/plugins/smooth-scrollbar.min.js"></script>
  <script>
    var win = navigator.platform.indexOf('Win') > -1;
    if (win && document.querySelector('#sidenav-scrollbar')) {
      var options = {
        damping: '0.5'
      }
      Scrollbar.init(document.querySelector('#sidenav-scrollbar'), options);
    }
  </script>
  <!-- Github buttons -->
  <script async defer src="https://buttons.github.io/buttons.js"></script>
  <!-- Control Center for Soft Dashboard: parallax effects, scripts for the example pages etc -->
  <script src="../assets/js/argon-dashboard.min.js?v=2.0.4"></script>
</body>
</html>