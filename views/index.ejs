<!DOCTYPE html>
<html lang="en">

  <%- include('admin/includes/header') %>
<body>
  <div class="min-height-400 bg-primary position-absolute w-100"></div>
 <%- include('admin/includes/sidebar')%>
  <main class="main-content position-relative border-radius-lg ">
    <!-- Navbar -->
   <%- include('admin/includes/navbar')%>
    <!-- End Navbar --> 
    <div class="container-fluid py-4">
      <div class="row">
        <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
          <div class="card">
            <div class="card-body p-3">
              <div class="row">
                <a href="/category/">
                  <div class="col-8">
                    <div class="numbers">
                      <p class="text-sm mb-0 text-uppercase font-weight-bold">Total Categories</p>
                      <h5 class="font-weight-bolder">
                        <%- totalCat %>
                      </h5>
                    
                    </div>
                  </div>
                </a>
              
                <div class="col-4 text-end">
                  <div class="icon icon-shape bg-gradient-primary shadow-primary text-center rounded-circle">
                    <i class="ni ni-money-coins text-lg opacity-10" aria-hidden="true"></i>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
          <div class="card">
            <div class="card-body p-3">
              <div class="row">
                <a href="/subcategory_list/">
                  <div class="col-8">
                    <div class="numbers">
                      <p class="text-sm mb-0 text-uppercase font-weight-bold">Total Subcategory</p>
                      <h5 class="font-weight-bolder">
                        <%- totalSub %>
                      </h5>
                      
                    </div>
                  </div>
                </a>
                
                <div class="col-4 text-end">
                  <div class="icon icon-shape bg-gradient-success shadow-success text-center rounded-circle">
                    <i class="ni ni-paper-diploma text-lg opacity-10" aria-hidden="true"></i>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
          <div class="card">
            <div class="card-body p-3">
              <div class="row">
                <a href="/user/">
                  <div class="col-8">
                    <div class="numbers">
                      <p class="text-sm mb-0 text-uppercase font-weight-bold">Total Users</p>
                      <h5 class="font-weight-bolder">
                        <%- totalUser %>
                      </h5>
                     
                    </div>
                  </div>
                </a>
                
                <div class="col-4 text-end">
                  <div class="icon icon-shape bg-gradient-danger shadow-danger text-center rounded-circle">
                    <i class="ni ni-world text-lg opacity-10" aria-hidden="true"></i>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
       
        <div class="col-xl-3 col-sm-6">
          <div class="card">
            <div class="card-body p-3">
              <div class="row">
                <a href="/products/">
                  <div class="col-8">
                    <div class="numbers">
                      <p class="text-sm mb-0 text-uppercase font-weight-bold">Total Products</p>
                      <h5 class="font-weight-bolder">
                        <%- totalProduct %>
                      </h5>
                      
                    </div>
                  </div>
                </a>
                
                <div class="col-4 text-end">
                  <div class="icon icon-shape bg-gradient-warning shadow-warning text-center rounded-circle">
                    <i class="ni ni-cart text-lg opacity-10" aria-hidden="true"></i>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="row mt-4">
       
        <div class="col-lg-5">
          <div class="col-lg-12">
            <div class="card">
              <div class="card-header pb-0 p-3">
                <h6 class="mb-0">Categories</h6>
              </div>
              <div class="card-body p-3">
                <ul class="list-group">
                  <% if(data.length){
                    for(var i = 0; i< data.length; i++) {%>  
                  <li class="list-group-item border-0 d-flex justify-content-between ps-0 mb-2 border-radius-lg">
                    
                    <div class="d-flex align-items-center">
                      <div class="icon icon-shape icon-sm me-3 bg-gradient-dark shadow text-center">
                        <i class="ni ni-mobile-button text-white opacity-10"></i>
                      </div>
                 
                      <div class="d-flex flex-column">
                        <h6 class="mb-1 text-dark text-sm"><%= data[i].category_name%></h6>

                        <% 
                                    for(var j = 0; j< sub_data.length; j++) {%>  
                                     
                                        <% var count =0 %>    
                                      
                                         
                                  <% if(data[i]._id.equals(sub_data[j].category_id)){ %>  
                             
                                    <span class="text-xs"><%= sub_data[j].sub_category_name %></span>
                                      <% count = count +1 %>
                                      <% }%>
                                  
                                      <% } %>

                        
                      </div>
                    </div>
                  </li>
                  <% }
                        
                }else{ %>
                    <div>
                       <p colspan="3">No user</p>
                    </div>
                 <% } %> 

                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
     
      <%- include('admin/includes/footer')%>
    </div>
  </main>
  


    <!--   Core JS Files   -->
   
    
  
    <!-- Github buttons -->
    <script async defer src="https://buttons.github.io/buttons.js"></script>
    <!-- Control Center for Soft Dashboard: parallax effects, scripts for the example pages etc -->
    
</body>
</html>